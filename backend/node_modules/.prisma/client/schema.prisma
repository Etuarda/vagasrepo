datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  jobs     Job[]
}

model Job {
  id       String @id @default(uuid())
  titulo   String
  empresa  String
  linkVaga String
  linkCV   String

  data   DateTime
  status String
  fase   String

  acaoNecessaria Boolean
  qualAcao       String?
  prazoAcao      DateTime?

  feedbackBool Boolean
  feedbackTxt  String?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([fase])
}
